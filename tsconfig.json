{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["express", "mocha", "node"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"],
  "files": ["src/types/express.d.ts"]
}
